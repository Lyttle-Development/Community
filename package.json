{
  "name": "community",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "docker:build": "concurrently \"npm run docker:build:api\" \"npm run docker:build:client\" \"npm run docker:build:dashboard\"",
    "docker:build:api": "docker build -t community.api:v3 -f Api/Dockerfile .",
    "docker:build:client": "docker build -t community.client:v3 -f Client/Dockerfile .",
    "docker:build:dashboard": "docker build -t community.dashboard:v3 -f Dashboard/Dockerfile .",
    "docker:setup:api": "cp Api/application.docker.community-v3.api.service /etc/systemd/system/application.docker.community-v3.api.service && nano /etc/systemd/system/application.docker.community-v3.api.service",
    "docker:setup:client": "cp Client/application.docker.community-v3.client.service /etc/systemd/system/application.docker.community-v3.client.service && nano /etc/systemd/system/application.docker.community-v3.client.service",
    "docker:setup:dashboard": "cp Dashboard/application.docker.community-v3.dashboard.service /etc/systemd/system/application.docker.community-v3.dashboard.service && nano /etc/systemd/system/application.docker.community-v3.dashboard.service",
    "format": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lyttle-Development/Community.git"
  },
  "engines": {
    "node": "20.12.0"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lyttle-Development/Community/issues"
  },
  "homepage": "https://github.com/Lyttle-Development/Community#readme",
  "workspaces": [
    "Content/app",
    "Api",
    "Client",
    "Dashboard",
    "Database"
  ],
  "dependencies": {
    "@lyttledev/api": "file:Api",
    "@lyttledev/client": "file:Client",
    "@lyttledev/content": "file:Content/app",
    "@lyttledev/dashboard": "file:Dashboard",
    "@lyttledev/database": "file:Database"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  }
}
